            "key_code": "a",
            "modifiers": [ "command" ]
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^org\\.vim\\.MacVim$"
