    {
      "description": "Left Cmd alone for Spotlight",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [ "any" ]
            }
          },
          "to_if_alone": {
            "key_code": "spacebar",
            "modifiers": [ "left_command" ]
          },
          "to": {
            "key_code": "left_command"
          }
        }
      ]
    },
