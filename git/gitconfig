# This is Git's per-user configuration file.
[user]
	name = Jason Cox
	email = dev@jasoncarloscox.com
[core]
	editor = vim
	ignorecase = false
	excludesfile = ~/dotfiles/git/gitignore
[alias]
	co = checkout
	st = status
	br = branch
	cm = commit
	a = add -p
	l = log --graph --decorate
	sm = submodule
	ps = push
	pl = pull
	psu = !git push --set-upstream origin $(git branch --show-current)
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[pull]
	ff = only
