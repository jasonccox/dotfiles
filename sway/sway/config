### VARIABLES

# Use super key as modifier.
set $mod Mod4

# Home row direction keys, like vim.
set $left h
set $down j
set $up k
set $right l

# Use Alacritty as the default terminal.
set $term alacritty

# Set preferred monospace font.
set $font_mono Fira Mono 10

### APPEARANCE

# Hide window titlebars/borders, leaving only a 1-pixel border.
default_border pixel

font $font_mono

# Set colors. My general approach is to use the same normal color for the border
# and background, the bright version of that color for the indicator, and normal
# white for the text (except for the focused window).

    # currently focused window - blue
    client.focused #3465a4 #3465a4 #eeeeec #48b9c7

    # most recently focused window in a container that's not focused - magenta
    client.focused_inactive #75507b #75507b #d3d7cf #ad7fa8

    # unfocused window - black (depart from general strategy here so that
    # borders don't blend in with windows)
    client.unfocused #333333 #333333 #88807c #d3d7cf

    # window with the urgency hint (Xwayland only) - yellow
    client.urgent #c4a000 #c4a000 #d3d7cf #ffce51

# Pad windows with a small blank space, but only if there's more than one on the
# workspace (smart gaps).
gaps inner 5
smart_gaps on

### OUTPUT CONFIGURATION

# Set the wallpaper.
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

# Arrange displays side by side - use `swaymsg -t get_outputs` to get names.

    # left display
    output DP-4 pos 0 0 res 1920x1080

    # right display
    output DP-5 pos 1920 0 res 1920x1080

# Disable the laptop display when the lid is closed. See
# https://github.com/swaywm/sway/wiki#clamshell-mode.
set $laptop eDP-1
bindswitch --reload --locked lid:on output $laptop disable
bindswitch --reload --locked lid:off output $laptop enable
exec_always ~/dotfiles/sway/sway/clamshell_mode.sh $laptop

### IDLE CONFIGURATION

# Lock the screen after 300 seconds of inactivity, then turn it off after
# another 60 seconds, and turn it back on when resumed. Also lock the screen
# before the computer goes to sleep.
exec swayidle -w \
         timeout 300 swaylock \
         timeout 360 'swaymsg "output * dpms off"' \
         resume 'swaymsg "output * dpms on"' \
         before-sleep swaylock

# Don't enter idle while in a Zoom meeting.
for_window [class="zoom" title="Zoom Meeting"] inhibit_idle visible

### INPUT CONFIGURATION

# Use colemak keyboard layout.
input * {
    xkb_layout us
    xkb_variant colemak
    xkb_options caps:escape
}

### KEY BINDINGS

# Basics

    # Start a terminal.
    bindsym $mod+t exec $term

    # Start a browser.
    bindsym $mod+b exec env MOZ_ENABLE_WAYLAND=1 firefox

    # Kill focused window.
    bindsym $mod+Shift+q kill

    # Start the launcher (desktop files).
    bindsym $mod+space exec wofi --show drun

    # Start the launcher (commands).
    bindsym $mod+Shift+space exec wofi --show run

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file.
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session).
    bindsym $mod+Shift+e exec swaynag -t warning -m \
            'Do you really want to exit sway?' -b 'Yes, exit' 'swaymsg exit'

# Moving around

    # Move your focus around.
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # Or use $mod+[up|down|left|right].
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift.
    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right

    # Ditto, with arrow keys.
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Workspaces

    # Switch to workspace.
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10

    # Move focused container to workspace.
    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

# Layout stuff:

    # "Split" the current object of focus with $mod+b or $mod+v, for horizontal
    # and vertical splits, respectively.
    bindsym $mod+x splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles.
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

    # Make the current focus fullscreen.
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode.
    bindsym $mod+Shift+g floating toggle

    # Swap focus between the tiling area and the floating area.
    bindsym $mod+g focus mode_toggle

    # Move focus to the parent container.
    bindsym $mod+a focus parent

# Scratchpad:

    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad.
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window as a floating window or hide the focused
    # scratchpad window. If there are multiple scratchpad windows, cycle through
    # them.
    bindsym $mod+minus scratchpad show

# Resizing containers

    mode "resize" {
        # left will shrink the containers width.
        # right will grow the containers width.
        # up will shrink the containers height.
        # down will grow the containers height.
        bindsym $left resize shrink width 10px
        bindsym $down resize grow height 10px
        bindsym $up resize shrink height 10px
        bindsym $right resize grow width 10px

        # Ditto, with arrow keys.
        bindsym Left resize shrink width 10px
        bindsym Down resize grow height 10px
        bindsym Up resize shrink height 10px
        bindsym Right resize grow width 10px

        # Return to default mode.
        bindsym Return mode "default"
        bindsym Escape mode "default"
    }

    # Enter resize mode
    bindsym $mod+r mode "resize"

# Function keys

    # Adjust brightness. - requires user to be a member of group `video`
    bindsym XF86MonBrightnessDown exec brightnessctl --device=intel_backlight set 5%-
    bindsym XF86MonBrightnessUp exec brightnessctl --device=intel_backlight set +5%

    # Adjust volume.
    bindsym XF86AudioRaiseVolume exec pulsemixer --unmute --change-volume +5 --max-volume 100
    bindsym XF86AudioLowerVolume exec pulsemixer --unmute --change-volume -5 --max-volume 100
    bindsym XF86AudioMute exec pulsemixer --toggle-mute

    # Mute/unmute microphone.
    bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle


### STATUS BAR

bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command ~/dotfiles/sway/sway/status_command.sh

    font $font_mono

    colors {
        # text
        statusline #d3d7cf

        background #333333

        focused_workspace #3465af #3465af #eeeeec

        # workspace that is visible but not on the focused display
        active_workspace #88807c #88807c #d3d7cf

        # workspace that is not visible
        inactive_workspace #88807c #88807c #d3d7cf
    }
}

### AUTOSTART PROGRAMS

exec mako

# Include additional config files.
include ~/dotfiles/sway/sway/config.d/*
